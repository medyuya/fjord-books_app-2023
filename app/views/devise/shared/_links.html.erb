<%- if controller_name != 'sessions' %>
  <%= link_to t('views.users.login'), new_session_path(resource_name) %>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to t('views.users.registration'), new_registration_path(resource_name) %>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to t('views.users.forget_password'), new_password_path(resource_name) %>
<% end %>
