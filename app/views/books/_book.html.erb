<div id="<%= dom_id book %>">
  <p>
    <strong><%= t('views.books.labels.title') %>:</strong>
    <%= book.title %>
  </p>

  <p>
    <strong><%= t('views.books.labels.memo') %>:</strong>
    <%= book.memo %>
  </p>

  <p>
    <strong><%= t('views.books.labels.author') %>:</strong>
    <%= book.author %>
  </p>

  <p>
    <strong><%= t('views.books.labels.picture') %>:</strong>
    <%= image_tag(book.picture_url) if book.picture.present? %>
  </p>

</div>
